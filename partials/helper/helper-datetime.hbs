<div class="hh-date u-flexCenter {{#if class}}{{class}}{{else}}u-textMuted u-fontSizeSmaller{{/if}}">
    <time class="datetime u-textCapitalize" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D"}}</time>
    <span class="bull">&bull;</span>
    {{#if featured}}<svg class="icon icon--star icon--xs"><use xlink:href="#icon-star"></use></svg>{{/if}}
</div>
